{
    "compilerOptions": {
        // General JS
        "moduleResolution": "node",

        // Paths
        "baseUrl": "src",
        "paths": {
            "@components/*": [
                "src/components/*",
            ],
            "@contexts/*": [
                "src/contexts",
            ],
            "@pages/*": [
                "src/pages/*",
            ],
            "@assets/*": [
                "src/assets/*",
            ],
            "@utils/*": [
                "src/utils/*",
            ],
            "@api/*": [
                "src/api/*",
            ],
        },
    },
    "include": [
        "src",
    ],
}
